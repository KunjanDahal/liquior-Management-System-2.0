{
  "name": "liquor-store-management",
  "version": "1.0.1",
  "description": "Liquor Store Management System - Desktop Application",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron dist-electron/main.js\"",
    "build": "npm run type-check && npm run lint && npm run build:renderer && npm run build:main && npm run build:electron",
    "build:electron": "npm run build:electron:workaround",
    "build:electron:workaround": "npm run build:electron:temp && npm run build:electron:move",
    "build:electron:temp": "npx electron-builder --dir --config.directories.output=dist-electron-build",
    "build:electron:move": "powershell -Command \"Remove-Item -Recurse -Force release\\win-unpacked -ErrorAction SilentlyContinue; Copy-Item -Path dist-electron-build\\win-unpacked\\* -Destination release\\win-unpacked -Recurse -Force; Remove-Item -Recurse -Force dist-electron-build\"",
    "build:installer": "npm run clean:release && npm run build:renderer && npm run build:main && electron-builder",
    "clean:release": "rimraf release",
    "clean:release:ps1": "powershell -ExecutionPolicy Bypass -File clean-release.ps1",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run type-check && npm run lint && npm run build:renderer && npm run build:main && electron-builder --mac",
    "build:linux": "npm run build -- --linux",
    "build:all": "npm run type-check && npm run lint && npm run build:renderer && npm run build:main && electron-builder --win --mac",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:main": "tsc -p tsconfig.main.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:db": "ts-node src/main/database/test-db.ts",
    "diagnose:db": "npx tsx src/main/database/diagnose-connection.ts",
    "setup:db": "npx tsx src/main/database/config/setup-helper.ts",
    "clean": "rimraf dist dist-electron release",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "react",
    "liquor-store",
    "pos",
    "inventory"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.56.2",
    "axios": "^1.7.7",
    "bcrypt": "^6.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.446.0",
    "msnodesqlv8": "^5.1.3",
    "mssql": "^12.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.8",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.9",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^1.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.liquorstore.management",
    "productName": "Liquor Store Management System",
    "copyright": "Copyright Â© 2024 Liquor Store Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "dist-electron/preload.mjs",
      "dist-electron/preload.js",
      "dist-electron/preload/**/*"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} ${version}.${ext}",
      "publisherName": "Liquor Store Management",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Liquor Store Management",
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "${productName} ${version} Portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business",
      "icon": "build/icon.icns",
      "artifactName": "${productName} ${version}.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 144,
          "y": 180
        },
        {
          "x": 396,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    }
  }
}
